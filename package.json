{
  "name": "airtrail",
  "version": "2.5.2",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "preview": "vite preview",
    "dev": "vite dev",
    "docs:dev": "cd docs && bun run dev",
    "docs:generate": "cd docs && bun run generate",
    "d": "bun run dx && bun run dev",
    "dx": "bun i && bun run dx:up && bun run db:migrate-dev",
    "dx:up": "docker compose -f docker/development/compose.yml up -d --wait",
    "dx:down": "docker compose -f docker/development/compose.yml down",
    "setup": "bun run dx && bun run db:seed && bun run dev",
    "lint": "prettier --check \"src/**/*.{js,ts,html,svelte,astro,css}\" --ignore-path ./.prettierignore && eslint ./src",
    "format": "prettier --write \"src/**/*.{js,ts,html,svelte,astro,css}\" --ignore-path ./.prettierignore && eslint ./src --fix",
    "test:unit": "vitest --run --dir src --passWithNoTests",
    "test:unit:watch": "vitest --watch --dir src --passWithNoTests",
    "test:e2e": "start-server-and-test \"bun run preview --port 3000\" http://localhost:3000 \"bunx playwright test\"",
    "pretest:e2e:dev": "bun scripts/other/confirm.js \"Are you sure you want to run e2e tests? This will reset your database (yes/no)\"",
    "test:e2e:dev": "bun run db:reset && bunx playwright test && bun run db:reset",
    "test:e2e:results": "bunx playwright show-report",
    "coverage": "vitest --run --coverage --passWithNoTests",
    "db:migrate-dev": "prisma migrate dev --skip-seed",
    "db:migrate-deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "prisma db seed",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@date-fns/tz": "^1.3.1",
    "@deck.gl/core": "~9.1.14",
    "@deck.gl/layers": "~9.1.14",
    "@deck.gl/mapbox": "~9.1.14",
    "@formkit/auto-animate": "^0.8.2",
    "@internationalized/date": "^3.8.2",
    "@layerstack/utils": "^1.0.1",
    "@lucia-auth/adapter-postgresql": "^3.1.2",
    "@node-rs/argon2": "^2.0.2",
    "@number-flow/svelte": "^0.3.9",
    "@o7/icon": "^0.3.65",
    "@oslojs/encoding": "^1.1.0",
    "@prisma/client": "^6.13.0",
    "@tanstack/svelte-query": "^5.83.1",
    "@tanstack/table-core": "^8.21.3",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@turf/turf": "^7.2.0",
    "bits-ui": "^1.8.0",
    "clsx": "^2.1.1",
    "cobe": "^0.6.4",
    "date-fns": "^4.1.0",
    "devalue": "^5.1.1",
    "focus-trap": "^7.6.5",
    "formsnap": "^2.0.1",
    "geo-tz": "^8.1.4",
    "kysely": "^0.28.5",
    "layerchart": "^1.0.11",
    "lru-cache": "^11.1.0",
    "maplibre-gl": "5.4.0",
    "mode-watcher": "^1.1.0",
