    "pg": "^8.16.3",
    "semver": "^7.7.2",
    "svelte-maplibre": "^1.2.0",
    "svelte-markdown": "^0.4.1",
    "svelte-motion": "^0.12.2",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "^2.27.1",
    "tailwind-merge": "^2.6.0",
